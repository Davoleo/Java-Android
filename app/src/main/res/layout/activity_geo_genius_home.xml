<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".geo_genius.GeoGeniusHome">

    <ImageView
            android:src="@mipmap/world_map"
            android:layout_width="wrap_content"
            android:layout_height="204dp" android:layout_alignParentTop="true"
            android:id="@+id/mapView"
            android:contentDescription="@string/world_map_desc" android:layout_alignParentStart="true"/>
    <ImageButton
            android:layout_width="105dp"
            android:layout_height="99dp" app:srcCompat="@drawable/capitals_button"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mapView" android:id="@+id/imageButton"
            android:scaleType="fitXY" android:contentDescription="@string/capitals"/>

</RelativeLayout>