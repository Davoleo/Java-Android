<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".randomizer.Randomizer">

    <Button
            android:layout_width="373dp"
            android:layout_height="167dp"
            android:id="@+id/colorButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.363"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/color_code"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:text="@string/rand_category_color" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/colorButton"/>
    <EditText
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/upperBoundTxb"
            android:hint="@string/upper_bound_hint" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="75dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/button_generate"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGenNum" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/upperBoundTxb" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" android:onClick="generateRandomNumber"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintStart_toEndOf="@+id/buttonGenNum"
            android:layout_marginStart="41dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" android:id="@+id/genNumberLbl"/>
    <TextView
            android:text="@string/rand_category_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryNumGen" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
</android.support.constraint.ConstraintLayout>